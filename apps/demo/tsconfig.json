  //     }
  //   },
  //   "include": [
  //     "src/**/*.ts",
  //     "src/**/*.d.ts",
  //     "src/**/*.tsx",
  //     "src/**/*.vue"
  //   ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": ["/**/*.vue", "src", "/**/*.ts", "src/lib/**/*"]
}
